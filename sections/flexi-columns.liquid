{%- liquid
  assign sectionid = section.id

  assign bg_color = section.settings.bg_color
  assign width = section.settings.width
  assign card_width = section.settings.card_width
  assign stack = section.settings.stack
  assign display_options = section.settings.display_options

  assign hide_dots = section.settings.hide_dots
  assign dot = section.settings.dot

  assign padding_top = section.settings.padding_top
  assign padding_bottom = section.settings.padding_bottom
  assign mobile_top_padding = section.settings.padding_top | times: 0.6 | round
  assign mobile_bottom_padding = section.settings.padding_bottom | times: 0.6 | round

  assign json_data = shop.metafields.flexi.flexistyling.value
  assign borderRadius = json_data.borderRadius
  assign animation = json_data.animation

  if json_data == blank
    assign borderRadius = 8
    assign animation = true
  endif

  if section.index <= 3
    assign limit_animation = false
  else
    assign limit_animation = true
  endif
-%}

{%- style -%}
  /* SECTION STYLES */
  .flexi-columns--{{ sectionid }} {
      background-color: {{ bg_color }};
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-right: 2em;
      padding-left: 2em;
  }

  @media only screen and (max-width: 768px) {
      .flexi-columns--{{ sectionid }} {
          padding-top: {{ mobile_top_padding }}px;
          padding-bottom: {{ mobile_bottom_padding }}px;
          padding-right: 2em;
          padding-left: 2em;
      }
  }

  .flexi-blocks-wrapper--{{ sectionid }} {
      display: flex;
      justify-content: center;
      align-items: center;
      margin: auto;
      max-width: {{ width }}px;
  }

  .flexi-blocks--{{ sectionid }} {
      display: grid;
      grid-template-columns: 1fr;
      justify-content: center;
      height: 100%;
      width: 100%;
  }

  /* .flexi-blocks-container--{{ sectionid }} {
      padding: 0.5em;
  } */

  @media (min-width: 768px) {
    .flexi-columns-grid-{{ section.id }} {
        display: grid !important;
        grid-template-columns: repeat(auto-fit, minmax(100px, 1fr)) !important;
        justify-content: center !important;
        gap: 24px !important;
        width: 100% !important;
        margin: auto !important;
    }
  }

  @media (max-width: 768px) {
      .swiper {
          display: block;
          width: 100%;
          height: 100%;
          margin: 0 auto;
      }

      .swiper-wrapper {
          align-items: center;
      }

      .swiper-{{ sectionid }} {
          max-width: {{ width }}px;
          overflow: hidden !important;
          margin: 0px !important;
      }

      .swiper-slide-card-container-{{ sectionid }} {
          display: -webkit-box;
          display: -ms-flexbox;
          display: -webkit-flex;
          display: flex;
          -webkit-box-pack: center;
          -ms-flex-pack: center;
          -webkit-justify-content: center;
          justify-content: center;
          -webkit-box-align: center;
          -ms-flex-align: center;
          -webkit-align-items: center;
          align-items: center;

          max-width: {{ card_width }}px !important;
          /* height: auto !important; */
          border-radius: {{ borderRadius }}px;
      }
  }

  {% if stack == "stack" %}
  @media only screen and (max-width: 768px) {
      .flexi-columns-grid-{{ section.id }} {
          display: grid !important;
          grid-template-columns: 1fr;
          gap: 12px;
          width: 100%;
      }
      #swiper-pagination-{{ sectionid }} {
          display: none !important;
      }
  }
  {% endif %}

  {% if hide_dots == false %}
      .swiper-{{ sectionid }} {
          padding-bottom: 36px !important;
      }
      #swiper-pagination-{{ sectionid }} .swiper-pagination-bullet {
          background-color: {{ dot }} !important;
      }
      #swiper-pagination-{{ sectionid }}  .swiper-horizontal>.swiper-pagination-bullets, .swiper-pagination-bullets.swiper-pagination-horizontal, .swiper-pagination-custom, .swiper-pagination-fraction {
          bottom: 0px !important;
      }
      #swiper-pagination-{{ sectionid }} .swiper-pagination-bullet {
          width: 24px;
          height: 2px;
          border-radius: 1px;
      }
  {% endif %}
{%- endstyle -%}

<section
  class="flexi-hero flexi-columns--{{ sectionid }} {{ display_options }}"
>
  <div id="flexi-embed-banner" style="display: none !important;">
    <p>
      Congrats on adding a Flexi section! 🎉 Go to
      <strong>App Embeds on the left hand side if the screen in theme settings to remove this banner</strong>.
      <a href="https://www.loom.com/embed/16e29856e42b44ca9f0dfb6729397024?sid=c05f56fa-df24-48de-b42a-66f88c9c22ae"
        >Make sure "Flexi Sections" is enabled.</a
      >
    </p>
  </div>
  <div class="flexi-blocks-wrapper--{{ sectionid }}">
    <div class="flexi-blocks--{{ sectionid }}">
      <div class="flexi-blocks-container--{{ sectionid }}">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when '@app' %}
              <div class="flexi--app-block--{{ block.id }} {% unless request.design_mode %}{% if animation and limit_animation %}fade-in{% else %}css-fade-in{% endif %}{% endunless %}">
                {% render block %}
              </div>

            {% when 'flexi-description' %}
              <div
                class="flexi--app-block--{{ block.id }} {% unless request.design_mode %}{% if animation and limit_animation %}fade-in{% else %}css-fade-in{% endif %}{% endunless %}"
                {{ block.shopify_attributes }}
              >
                {% render 'flexi-description', block: block %}
              </div>

            {% when 'flexi-divider' %}
              <div
                class="flexi--app-block--{{ block.id }} {% unless request.design_mode %}{% if animation and limit_animation %}fade-in{% else %}css-fade-in{% endif %}{% endunless %}"
                {{ block.shopify_attributes }}
              >
                {% render 'flexi-divider', block: block %}
              </div>

            {% when 'flexi-heading' %}
              <div
                class="flexi--app-block--{{ block.id }} {% unless request.design_mode %}{% if animation and limit_animation %}fade-in{% else %}css-fade-in{% endif %}{% endunless %}"
                {{ block.shopify_attributes }}
              >
                {% render 'flexi-heading', block: block %}
              </div>

            {% when 'flexi-image' %}
              <div
                class="flexi--app-block--{{ block.id }} {% unless request.design_mode %}{% if animation and limit_animation %}fade-in{% else %}css-fade-in{% endif %}{% endunless %}"
                {{ block.shopify_attributes }}
              >
                {% render 'flexi-image', block: block %}
              </div>

            {% when 'flexi-subheading' %}
              <div
                class="flexi--app-block--{{ block.id }} {% unless request.design_mode %}{% if animation and limit_animation %}fade-in{% else %}css-fade-in{% endif %}{% endunless %}"
                {{ block.shopify_attributes }}
              >
                {% render 'flexi-subheading', block: block %}
              </div>
          {% endcase %}
        {% endfor %}
      </div>

      <div
        class="swiper swiper-{{ sectionid }} swiper-container flexi-blocks-container--{{ sectionid }}"
        style="margin: 0px;"
      >
        <div class="swiper-wrapper flexi-columns-grid-{{ section.id }}">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'flexi-column' %}
                <div class="swiper-slide swiper-slide-card-container-{{ sectionid }}" {{ block.shopify_attributes }}>
                  {% render 'flexi-column-card', block: block %}
                </div>
            {% endcase %}
          {% endfor %}
        </div>

        {% if section.settings.hide_dots == false %}
          <div id="swiper-pagination-{{ sectionid }}" class="swiper-pagination"></div>
        {% endif %}
      </div>

      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'flexi-button' %}
            <div class="flexi-blocks-container--{{ sectionid }}">
              <div
                class="flexi--app-block--{{ block.id }} {% unless request.design_mode %}{% if animation and limit_animation %}fade-in{% else %}css-fade-in{% endif %}{% endunless %}"
                {{ block.shopify_attributes }}
              >
                {% render 'flexi-button', block: block %}
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>

<script>
    window.addEventListener('DOMContentLoaded', (event) => {
        document.querySelectorAll('.swiper-{{ sectionid }}').forEach((swiperContainer) => {
            const swiper = new Swiper(swiperContainer, {
                slidesPerView: 'auto',
                spaceBetween: 12,
                grabCursor: true,
                loop: true,
                pagination: {
                  el: swiperContainer.querySelector('.swiper-pagination'),
                  clickable: true,
                },
                breakpoints: {
                  768: {
                    spaceBetween: 12,
                  },
                },
                on: {
                    init: function () {
                        adjustSlideHeights(this);
                    },
                    resize: function () {
                        adjustSlideHeights(this);
                    }
                }
            });
        });
    
        function adjustSlideHeights(swiper) {
            let maxHeight = 0;
            swiper.slides.forEach((slide) => {
                const slideHeight = slide.offsetHeight;
                if (slideHeight > maxHeight) {
                    maxHeight = slideHeight;
                }
            });
            swiper.slides.forEach((slide) => {
                slide.style.height = maxHeight + 'px';
            });
        }
    });
    </script>

