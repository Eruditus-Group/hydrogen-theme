{%- liquid
  assign sectionid = section.id

  assign featured_text = section.settings.featured_text
  assign font_size = section.settings.font_size
  assign font_color = section.settings.font_color

  assign width = section.settings.width

  assign padding = section.settings.padding
  assign mobile_padding = section.settings.padding | times: 0.6 | round

  assign bg_color = section.settings.bg_color
  assign display_options = section.settings.display_options

  assign json_data = shop.metafields.flexi.flexistyling.value
  assign animation = json_data.animation

  if json_data == blank
    assign animation = true
  endif

  if section.index <= 3
    assign limit_animation = false
  else
    assign limit_animation = true
  endif
-%}

{%- style -%}
  /* SECTION STYLES */
  .flexi-featured-text--{{ sectionid }} {
      background-color: {{ bg_color }};
      padding-top: {{ padding }}px;
      padding-bottom: {{ padding }}px;
      padding-right: 2em;
      padding-left: 2em;
  }

  @media only screen and (max-width: 768px) {
      .flexi-featured-text--{{ sectionid }} {
          padding-top: {{ mobile_padding }}px;
          padding-bottom: {{ mobile_padding }}px;
          padding-right: 1em;
          padding-left: 1em;
      }
  }

  .flexi-blocks-wrapper--{{ sectionid }} {
      max-width: {{ width }}px;
  }


  .flexi-blocks--{{ sectionid }} {
      display: grid;
      justify-content: center;
      gap: 12px;
  }

  @media only screen and (min-width: 768px) {
      .flexi-blocks-wrapper--{{ sectionid }} {
          display: flex;
          justify-content: center;
          align-items: center;
          margin: auto;
      }

      .flexi-blocks--{{ sectionid }} {
          height: 100%;
          width: 100%;
      }
  }

  /* FEATURED TEXT */
  #flexi-col-text-{{ sectionid }} {
      align-self: start;
      width: 100%;
      height: auto;
      padding: 0.5em;
  }
  #flexi-text-{{ sectionid }} p {
      font-size: {{ font_size }}px;
      color: {{ font_color }};
      line-height: normal;
      letter-spacing: normal;
  }
  #flexi-text-{{ sectionid }} a {
      color: {{ font_color }};
      transition: opacity 0.3s ease;
  }
  #flexi-text-{{ sectionid }} a:hover {
      opacity: 0.7;
  }
  .flexi-text-{{ sectionid }} p {
      margin: 0;
      padding: 0;
      border: 0;
      vertical-align: baseline;
      color: inherit;
      background: none;
      text-decoration: none;
      text-align: inherit;
  }

  /* COLUMN ORDER */
  @media only screen and ( min-width: 769px ) {
        .flexi-blocks--{{ sectionid }} .flexi-col-{{ sectionid }}:nth-child(1) {
          order: 2;
        }
        .flexi-blocks--{{ sectionid }} {
            grid-template-columns: 20% 80%;
        }
  }
  @media only screen and ( max-width: 768px ) {
        .flexi-blocks--{{ sectionid }} .flexi-col-{{ sectionid }}:nth-child(1) {
          order: 2;
        }

      .flexi-blocks--{{ sectionid }} {
        grid-template-columns: 1fr;
        gap: 0px;
      }
  }

  .flexi-blocks-container--{{ sectionid }} {
      align-self: start;
      padding: 0.5em;
  }
{%- endstyle -%}


<section
