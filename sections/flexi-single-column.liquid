{%- liquid
  assign sectionid = section.id

  assign image_sizes = '10,200,320,480,768,1024,1280,1440,1920' | split: ','

  assign bg_color = section.settings.bg_color
  assign width = section.settings.width
  assign blocks_padding = section.settings.blocks_padding
  assign display_options = section.settings.display_options

  assign padding_top = section.settings.padding_top
  assign padding_bottom = section.settings.padding_bottom
  assign mobile_top_padding = section.settings.padding_top | times: 0.6 | round
  assign mobile_bottom_padding = section.settings.padding_bottom | times: 0.6 | round

  assign bg_image = section.settings.bg_image
  assign image_alignment_x = section.settings.image_alignment_x
  assign image_alignment_y = section.settings.image_alignment_y
  assign overlay_color = section.settings.overlay_color
  assign bg_image_size = section.settings.bg_image_size
  assign alpha = section.settings.opacity | divided_by: 100.0
  assign bg_color = section.settings.bg_color
  assign blocks_bg_color = section.settings.blocks_bg_color

  assign json_data = shop.metafields.flexi.flexistyling.value
  assign borderRadius = json_data.borderRadius
  assign animation = json_data.animation

  if json_data == blank
    assign borderRadius = 8
    assign animation = true
  endif

  if section.index <= 3
    assign limit_animation = false
  else
    assign limit_animation = true
  endif
-%}

{%- style -%}
  .flexi-single-column--{{ sectionid }} {
      background-color: {{ bg_color }};
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-right: 2em;
      padding-left: 2em;
  }

  @media only screen and (max-width: 768px) {
      .flexi-single-column--{{ sectionid }} {
          padding-top: {{ mobile_top_padding }}px;
          padding-bottom: {{ mobile_bottom_padding }}px;
          padding-right: 0.5em;
          padding-left: 0.5em;
      }
  }

{% if bg_image != blank %}
  {% for size in image_sizes %}
      {% capture imageSize %}{{ size }}x{% endcapture %}
      @media (min-width: {{ size }}px) {
      .flexi-single-column--{{ sectionid }} {
          min-height: 100%;
          {% if bg_color != 'rgba(0,0,0,0)' and bg_color != '' %}
              background: {{ bg_color }} url('{{ bg_image | img_url: imageSize }}');
          {% else %}
              background: linear-gradient(0deg, {{ overlay_color | color_modify: 'alpha', alpha }}, {{ overlay_color | color_modify: 'alpha', alpha }}), url('{{ bg_image | img_url: imageSize }}');
          {% endif %}
          background-size: {{ bg_image_size }};
          background-position-x: {{ image_alignment_x }};
          background-position-y: {{ image_alignment_y }};
          background-repeat: no-repeat;
      }
    }
  {% endfor %}
{% endif %}

  .flexi-blocks-wrapper--{{ sectionid }} {
      display: flex;
      justify-content: center;
      align-items: center;
      margin: auto;
      max-width: {{ width }}px;
  }

  .flexi-blocks--{{ sectionid }} {
      display: grid;
      grid-template-columns: 1fr;
      justify-content: center;
      height: 100%;
      width: 100%;
      border-radius: {{ borderRadius }}px;
      background-color: {{ blocks_bg_color }};
  }

  .flexi-blocks-container--{{ sectionid }} {
      padding: 1em;
  }

  @media only screen and (min-width: 768px) {
      .flexi-blocks-container--{{ sectionid }} {
          padding: {{ blocks_padding }};
      }
  }
{%- endstyle -%}

